.side-bar
  .left-header
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icon
        = link_to new_group_path, class: "top-items__btn" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "top-items__btn" do
          = icon('fas', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .group__name
            = group.name
          .group__message
            = group.show_last_message
