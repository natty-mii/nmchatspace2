.chat-main
  .chat-main__groupInfo
    .chat-main__groupInfo--infoBlock
      .groupName
        = @group.name
      .memberName
        Member :
        = @group.users.pluck(:name).join(",")
    = link_to edit_group_path(@group), class: "chat-main__groupInfo--editBtn" do
      .btnString
        Edit
  .chat-main__messageList
    = render partial: 'message', collection: @messages
    -# = render @message　でも省略して可
  .chat-main__messageForm
    = form_with model: [@group, @message], html: {class: "new-message"}, local: true do |f|
      .input-box
        = f.text_field :content, class: "messageInput", placeholder: "メッセージを書いてね"
        = f.label :image, class: "messageImage" do
          = icon('far', 'image', class: 'Form__icon')
          = f.file_field :image, class: "hidden"
      .preview
      = f.submit "Send", class: "sendBtn"
        .sendString
