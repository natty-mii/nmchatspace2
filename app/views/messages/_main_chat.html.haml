.chat-main
  .group-info
    .header-left
      .header-left__group-name
        = @group.name
      .header-left__group-member
        Member :
        = @group.users.pluck(:name).join(",")
    = link_to edit_group_path(@group), class: "edt-btn" do
      Edit
  .message-list
    = render @messages
  .message-form
    =form_with model: [@group, @message], html: {class: "new-message"}, local: true do |f|
      .input-box
        = f.text_field :content, class: 'input-content', placeholder: "type a message"
        = f.label :image, class: 'input-image' do
          = icon('far', 'image')
          = f.file_field :image, class: 'input-file'
      = f.submit 'Send', class: 'submit-btn'
